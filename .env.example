# ============================================
# HCMJ Finance - Environment Variables
# ============================================
# Copy this file to .env and fill in actual values

# Database
DATABASE_URL="postgresql://hcmj_user:hcmj_password_dev@localhost:5433/hcmj_finance?schema=public"

# Redis
REDIS_URL="redis://localhost:6379"

# Authentication
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="7d"

# API Configuration
API_PORT=3001
FRONTEND_URL="http://localhost:3000"

# Google Cloud Platform
GCP_PROJECT_ID="hcmj-finance"

# Google Workspace Integration
# Option A: Path to service account JSON key (development)
GOOGLE_SERVICE_ACCOUNT_KEY_PATH="./credentials/service-account.json"
# Option B: JSON string of service account key (production - from Secret Manager)
# GOOGLE_SERVICE_ACCOUNT_KEY='{"type":"service_account",...}'
# Master folder ID in Google Drive
GOOGLE_DRIVE_MASTER_FOLDER_ID=""
# Admin email for domain-wide delegation (if using G Suite)
GOOGLE_ADMIN_EMAIL=""

# Application
NODE_ENV="development"
